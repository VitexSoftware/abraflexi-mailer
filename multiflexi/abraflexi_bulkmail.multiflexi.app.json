                "en": "Mail Template Filename",
                "cs": "Mail Template Filename"
            },
            "defval": "",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_BULKMAIL_QUERY": {
            "type": "string",
            "description": {
                "en": "Filter of recipients",
                "cs": "Filter of recipients"
            },
            "defval": "kod='ZAKAZNIKA' or kod='ZAKAZNIKB' or kod='ZAKAZNIKC'",
            "required": true,
            "category": "API"
        },
        "MAIL_FROM": {
            "type": "email",
            "description": {
                "en": "sender email address",
                "cs": "odeslater ee-mail address"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "MAIL_SUBJECT": {
            "type": "string",
            "description": {
                "en": "Subject for mails",
                "cs": "Subject for mails"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "EASE_SMTP": {
            "type": "string",
            "description": {
                "en": "configuration string for Pear_Mail",
                "cs": "configuration string for Pear_Mail"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "LOCALIZE": {
            "type": "string",
            "description": {
                "en": "Localize to choosen language",
                "cs": "Localize to choosen language"
            },
            "defval": "cs_CZ",
            "options": [
                "cs_CS",
                "en_US"
            ],
            "required": false,
            "category": "Other"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "write log messages using",
                "cs": "write log messages using"
            },
            "defval": "console|syslog",
            "required": false,
            "category": "Behavior"
        },
        "APP_DEBUG": {
            "type": "bool",
            "description": {
                "en": "show app version at startup",
                "cs": "show app version at startup"
            },
            "defval": "",
            "required": false,
            "category": "Behavior"
        },
        "MUTE": {
            "type": "bool",
            "description": {
                "en": "true to dry run",
                "cs": "true to dry run"
            },
            "defval": "",
            "required": false,
            "category": "Behavior"
        },
