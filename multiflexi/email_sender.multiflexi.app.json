{
    "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
    "schemaVersion": "3.0.0",
    "uuid": "97c1c85d-3800-4d12-aabb-b60b15cd8df0",
    "name": {
        "en": "Email Sender",
        "cs": "Email Sender"
    },
    "description": {
        "en": "Send unsent documents with attachments",
        "cs": "Send unsent documents with attachments"
    },
    "tags": [
        "AbraFlexi",
        "Mail",
        "Sender"
    ],
    "homepage": "https://github.com/VitexSoftware/abraflexi-mailer/",
    "image": "",
    "ociimage": "docker.io/vitexsoftware/abraflexi-mailer",
    "executable": "abraflexi-send-unsent-with-attachments",
    "environment": {
        "ABRAFLEXI_COMPANY": {
            "type": "string",
            "description": {
                "en": "AbraFlexi comapny code",
                "cs": "AbraFlexi comapny code"
            },
            "defval": "demo_de",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_LOGIN": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Login",
                "cs": "AbraFlexi Login"
            },
            "defval": "winstrom",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_PASSWORD": {
            "type": "password",
            "description": {
                "en": "AbraFlexi password",
                "cs": "AbraFlexi password"
            },
            "defval": "winstrom",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_URL": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Server URI",
                "cs": "AbraFlexi Server URI"
            },
            "defval": "https://demo.flexibee.eu:5434",
            "required": true,
            "category": "API"
        },
        "EASE_SMTP": {
            "type": "string",
            "description": {
                "en": "configuration string for Pear_Mail",
                "cs": "configuration string for Pear_Mail"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "APP_DEBUG": {
            "type": "checkbox",
            "description": {
                "en": "Show debug messages",
                "cs": "Show debug messages"
            },
            "defval": "False",
            "required": true,
            "category": "Behavior"
        },
        "LOCALIZE": {
            "type": "string",
            "description": {
                "en": "Localize to choosen language",
                "cs": "Localize to choosen language"
            },
            "defval": "cs_CZ",
            "options": [
                "cs_CS",
                "en_US"
            ],
            "required": false,
            "category": "Other"
        },
        "MUTE": {
            "type": "checkbox",
            "description": {
                "en": "Do not send messages to customer",
                "cs": "Do not send messages to customer"
            },
            "defval": "False",
            "required": false,
            "category": "Behavior"
        },
        "EASE_MAILTO": {
            "type": "email",
            "description": {
                "en": "Default target whe MUTE is ON",
                "cs": "Default target whe MUTE is ON"
            },
            "defval": "",
            "required": false,
            "category": "Other"
        },
        "ADD_LOGO": {
            "type": "checkbox",
            "description": {
                "en": "Include Graphical Logo into messages",
                "cs": "Include Graphical Logo into messages"
            },
            "defval": "False",
            "required": false,
            "category": "Other"
        },
        "ADD_QRCODE": {
            "type": "checkbox",
            "description": {
                "en": "Include Payment QR Code into messages",
                "cs": "Include Payment QR Code into messages"
            },
            "defval": "False",
            "required": false,
            "category": "Other"
        },
        "MAIL_CC": {
            "type": "email",
            "description": {
                "en": "Carbon Copy for every message sent",
                "cs": "Carbon Copy for every message sent"
            },
            "defval": "",
            "required": false,
            "category": "Other"
        },
        "MAIL_FROM": {
            "type": "email",
            "description": {
                "en": "Default sender address",
                "cs": "Default sender address"
            },
            "defval": "",
            "required": false,
            "category": "Other"
        },
        "SEND_LOCKED": {
            "type": "checkbox",
            "description": {
                "en": "Try to temporary unlock document to save sent date in it",
                "cs": "Try to temporary unlock document to save sent date in it"
            },
            "defval": "False",
            "required": false,
            "category": "Other"
        },
        "DRY_RUN": {
            "type": "checkbox",
            "description": {
                "en": "Do not modify document in AbraFlexi (send state/date)",
                "cs": "Do not modify document in AbraFlexi (send state/date)"
            },
            "defval": "False",
            "required": false,
            "category": "Other"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "write log messages using",
                "cs": "write log messages using"
            },
            "defval": "console|syslog",
            "required": false,
            "category": "Behavior"
        },
        "COMPANY_NAME": {
            "type": "string",
            "description": {
                "en": "Company name to be used in messages",
                "cs": "Company name to be used in messages"
            },
            "defval": "Demo Company",
            "required": false,
            "category": "Other"
        },
        "COMPANY_EMAIL": {
            "type": "email",
            "description": {
                "en": "Company email address",
                "cs": "Company email address"
            },
            "defval": "info@democompany.com",
            "required": false,
            "category": "Other"
        },
        "COMPANY_SIGNATURE": {
            "type": "string",
            "description": {
                "en": "Company email signature",
                "cs": "Company email signature"
            },
            "defval": "Best regards,\nDemo Company",
            "required": false,
            "category": "Other"
        }
    }
}
