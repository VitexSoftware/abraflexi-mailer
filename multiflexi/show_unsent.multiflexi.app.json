{
  "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
  "schemaVersion": "3.0.0",
  "version": "1.3.8",
  "uuid": "137f24ef-11a5-4bf3-81b3-bdf2e0ea7919",
  "name": {
    "en": "Show Unsent",
    "cs": "Zobrazit neodesíané"
  },
  "description": {
    "en": "Report Unsent documents",
    "cs": "Sestavy neodeslanych dokladů"
  },
  "tags": ["AbraFlexi", "Mail", "Check", "Json"],
  "homepage": "https://github.com/VitexSoftware/abraflexi-mailer/",
  "ociimage": "docker.io/vitexsoftware/abraflexi-mailer",
  "executable": "abraflexi-show-unsent",
  "environment": {
    "ABRAFLEXI_COMPANY": {
      "type": "string",
      "description": {
        "en": "AbraFlexi comapny code",
        "cs": "Kód společnosti v AbraFlexi"
      },
      "defval": "demo_de",
      "required": true,
      "category": "API"
    },
    "ABRAFLEXI_LOGIN": {
      "type": "string",
      "description": {
        "en": "AbraFlexi Login",
        "cs": "Přihlašovací jméno do AbraFlexi"
      },
      "defval": "winstrom",
      "required": true,
      "category": "API"
    },
    "ABRAFLEXI_PASSWORD": {
      "type": "password",
      "description": {
        "en": "AbraFlexi password",
        "cs": "Heslo pro AbraFlexi"
      },
      "defval": "winstrom",
      "required": true,
      "category": "API"
    },
    "ABRAFLEXI_URL": {
      "type": "string",
      "description": {
        "en": "AbraFlexi Server URI",
        "cs": "URI adresa AbraFlexi serveru"
      },
      "defval": "https://demo.flexibee.eu:5434",
      "required": true,
      "category": "API"
    },
    "RESULT_FILE": {
      "type": "string",
      "description": {
        "en": "write output json data to",
        "cs": "zapsat výstupní JSON data do"
      },
      "defval": "unsent_{ABRAFLEXI_COMPANY}_report.json",
      "required": false,
      "category": "Other"
    },
    "EASE_LOGGER": {
      "type": "string",
      "description": {
        "en": "write log messages using",
        "cs": "zapisovat zprávy do logu pomocí"
      },
      "defval": "console|syslog",
      "required": false,
      "category": "Behavior"
    },
    "ZABBIX_KEY": {
      "type": "string",
      "description": {
        "en": "Default name for Zabbix Item key name",
        "cs": "Výchozí název pro klíč položky Zabbix"
      },
      "defval": "Unsent-Documents-{ABRAFLEXI_COMPANY}",
      "required": false,
      "category": "Other"
    }
  },
  "produces": {
    "unsent_invoices": {
      "type": "array",
      "format": "json",
      "description": {
        "en": "List of unsent invoice documents with recipient information",
        "cs": "Seznam neodeslanych faktur s informacemi o příjemcích"
      }
    }
  }
}
