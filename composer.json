{
    "name": "vitexsoftware/abraflexi-mailer",
    "description": "Document sender for AbraFlexi written in PHP",
    "authors": [
        {
            "name": "Vítězslav Dvořák",
            "email": "info@vitexsoftware.cz"
        }
    ],
    "require": {
        "vitexsoftware/abraflexi-bricks": "abraflexi-dev",
        "pear/net_smtp": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "*",
        "friendsofphp/php-cs-fixer": "^3.61",
        "ergebnis/composer-normalize": "^2.43",
        "ergebnis/php-cs-fixer-config": "^6.34"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "AbraFlexi\\": "src/AbraFlexi/",
            "AbraFlexi\\Mailer\\": "src/AbraFlexi/Mailer/",
            "AbraFlexi\\Mailer\\Ui\\": "src/AbraFlexi/Mailer/Ui/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    }
}
