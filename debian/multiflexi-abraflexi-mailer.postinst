#!/bin/sh
# postinst script for abraflexi-mailer
set -e

. /usr/share/debconf/confmodule

APPLICATION=`echo $DPKG_MAINTSCRIPT_PACKAGE | sed 's/multiflexi-//'`
for file in `ls /usr/lib/$APPLICATION/multiflexi/*.json`
do
	multiflexi-cli application import --file $file
done

sed -i 's/null, $value);/"", $value);/' /usr/share/php/Mail.php
