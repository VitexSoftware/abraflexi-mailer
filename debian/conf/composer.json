{
    "name": "deb/abraflexi-mailer",
    "description": "Document sender for AbraFlexi written in PHP",
    "type": "project",
    "version": "0.1",
    "authors": [
        {
            "name": "Vítězslav Dvořák",
            "email": "info@vitexsoftware.cz"
        }
    ],
    "config": {
        "vendor-dir": "/var/lib/abraflexi-mailer"
    },
    "require": {
        "deb/abraflexi-bricks": "*"
    },
    "autoload": {
        "psr-4": {
            "AbraFlexi\\Mailer\\": "AbraFlexi/Mailer/",
            "AbraFlexi\\Mailer\\Ui\\": "AbraFlexi/Mailer/Ui/"
        }
    },    
    "repositories": [
        {
            "type": "path",
            "url": "/usr/share/php/EaseCore"
        },
        {
            "type": "path",
            "url": "/usr/share/php/EaseHtml"
        },
        {
            "type": "path",
            "url": "/usr/share/php/AbraFlexi"
        },
        {
            "type": "path",
            "url": "/usr/share/php/EaseBricks"
        },
        {
            "type": "path",
            "url": "/usr/share/php/AbraFlexiBricks"
        }
    ]
}

